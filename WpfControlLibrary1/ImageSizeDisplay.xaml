<UserControl
  x:Class="BetterExplorerControls.ImageSizeDisplay"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="52"
  d:DesignWidth="115"
  mc:Ignorable="d">
  <Grid Height="50">
    <StackPanel Orientation="Horizontal">
      <Grid>
        <TextBlock
          Name="textBlock1"
          Margin="2,4,0,0"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          Text="Width:" />
        <TextBlock
          Name="textBlock2"
          Margin="2,29,0,0"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          Text="Height:" />
      </Grid>
      <Grid>
        <TextBox
          Name="textBox1"
          Width="70"
          Height="23"
          Margin="2,1,0,0"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          Background="Gainsboro"
          IsReadOnly="True" />
        <TextBox
          Name="textBox2"
          Width="70"
          Height="23"
          Margin="2,26,0,0"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          Background="Gainsboro"
          IsReadOnly="True" />
      </Grid>
    </StackPanel>
  </Grid>
</UserControl>
